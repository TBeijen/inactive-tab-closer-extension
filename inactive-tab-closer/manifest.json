{
    "manifest_version": 3,
    "name": "Inactive Tab Closer",
    "version": "1.0",
    "description": "Automatically closes tabs matching specified domains after inactivity",
    "permissions": [
        "tabs",
        "storage"
    ],
    "host_permissions": [],
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}